{
  "name": "Text to File",
  "description": "Copy highlighted text from a webpage to save to a text file",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "downloads",
    "contextMenus",
    "serial"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "ChromeExtenIcon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}